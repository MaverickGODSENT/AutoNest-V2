@using AutoNest.Web.Areas.Admin.Models
@model DetailedUserViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "User Details";
}

<h2 class="mb-3">User Details</h2>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h4>@Model.UserName</h4>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th style="width: 200px;">ID</th>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>@Model.Email</td>
                </tr>
                <tr>
                    <th>Phone Number</th>
                    <td>@(string.IsNullOrEmpty(Model.PhoneNumber) ? "Not Provided" : Model.PhoneNumber)</td>
                </tr>
                <tr>
                    <th>Email Confirmed</th>
                    <td>
                        @if (Model.EmailConfirmed)
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">No</span>
                        }
                    </td>
                </tr>
                <tr>
                    <th>Phone Confirmed</th>
                    <td>
                        @if (Model.PhoneNumberConfirmed)
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">No</span>
                        }
                    </td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>
                        @if (Model.Roles.Any())
                        {
                            foreach (var role in Model.Roles)
                            {
                                <span class="badge bg-info me-1">@role</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted">No roles assigned</span>
                        }
                    </td>
                </tr>
                <tr>
                    <th>Created Date</th>
                    <td>@Model.CreatedDate</td>
                </tr>
            </tbody>
        </table>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-area="Admin" asp-controller="AdminUser" asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Users
            </a>
        </div>
    </div>
</div>
