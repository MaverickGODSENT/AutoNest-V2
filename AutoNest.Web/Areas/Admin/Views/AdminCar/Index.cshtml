@using AutoNest.Models.Cars
@model IEnumerable<CarViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "All Cars";
}

<h2 class="mb-4">All Cars</h2>
<a asp-action="Create" asp-controller="AdminCar" asp-area="Admin" class="btn btn-primary btn-sm">Create new car</a>
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Car ID</th>
            <th>Brand</th>
            <th>Model</th>
            <th>Model Year</th>
            <th>Compatible Parts</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Id</td>
                <td>@car.Brand</td>
                <td>@car.Model</td>
                <td>@car.ModelYear</td>
                <td>
                    @if (car.CompatibleParts.Any())
                    {
                        <ul class="mb-0">
                            @foreach (var part in car.CompatibleParts)
                            {
                                <li>@part</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>No parts available</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@car.Id" class="btn btn-info btn-sm">
                        <i class="bi bi-eye"></i> View
                    </a>
                    <a asp-action="Edit" asp-route-id="@car.Id" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
