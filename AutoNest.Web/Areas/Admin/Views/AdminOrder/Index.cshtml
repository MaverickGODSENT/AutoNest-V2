@using AutoNest.Models.Orders
@model IEnumerable<OrderViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "All Orders";
}

<h2>All Orders</h2>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Order ID</th>
            <th>User ID</th>
            <th>Cart ID</th>
            <th>SubTotal</th>
            <th>Shipping Cost</th>
            <th>Total Amount</th>
            <th>Shipping Address</th>
            <th>City</th>
            <th>State</th>
            <th>ZIP Code</th>
            <th>Payment Method</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.UserId</td>
                <td>@order.CartId</td>
                <td>@order.SubTotal.ToString("C")</td>
                <td>@order.ShippingCost.ToString("C")</td>
                <td><strong>@order.TotalAmount.ToString("C")</strong></td>
                <td>@order.ShippingAddress</td>
                <td>@order.ShippingCity</td>
                <td>@order.ShippingState</td>
                <td>@order.ShippingZipCode</td>
                <td>@order.PaymentMethod</td>
                <td>
                    <a asp-action="Details" asp-controller="AdminOrder" asp-area="Admin" asp-route-orderId="@order.OrderId" class="btn btn-info btn-sm">
                        <i class="bi bi-eye"></i> View
                    </a>
                    <a asp-action="Edit" asp-controller="AdminOrder" asp-area="Admin" asp-route-orderId="@order.OrderId" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-controller="AdminOrder" asp-area="Admin" asp-route-orderId="@order.OrderId" class="btn btn-danger btn-sm">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
