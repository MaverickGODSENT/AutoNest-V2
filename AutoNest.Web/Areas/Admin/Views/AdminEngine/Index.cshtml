@using AutoNest.Models.Engines
@model IEnumerable<EngineViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "All Engines";
}

<h1>All Engines</h1>

<div class="mb-3">
    <a asp-action="CreateEngine" class="btn btn-success">Create New Engine</a>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Engine Code</th>
            <th>Displacement (L)</th>
            <th>Horsepower (HP)</th>
            <th>Transmission</th>
            <th>Drivetrain</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var engine in Model)
            {
                <tr>
                    <td>@engine.EngineCode</td>
                    <td>@engine.EngineDisplacement</td>
                    <td>@engine.EngineHorsePower</td>
                    <td>@engine.Transmission</td>
                    <td>@engine.Drivetrain</td>
                    <td>
                        <a asp-action="EditEngine" asp-route-id="@engine.Id" class="btn btn-primary btn-sm">Edit</a>
                        <form asp-action="DeleteEngine" asp-route-id="@engine.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this engine?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No engines available.</td>
            </tr>
        }
    </tbody>
</table>
