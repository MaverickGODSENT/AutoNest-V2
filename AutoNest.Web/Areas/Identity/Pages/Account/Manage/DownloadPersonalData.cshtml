@page
@model DownloadPersonalDataModel
@{
    ViewData["Title"] = "Download Your Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<style>
    :root {
        --primary-color: #3498db;
        --secondary-color: #2c3e50;
        --accent-color: #e74c3c;
        --success-color: #2ecc71;
        --light-color: #ecf0f1;
        --border-color: #e0e0e0;
        --light-grey: #f8f9fa;
        --dark-color: #2c3e50;
    }

    .page-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--dark-color);
        margin-bottom: 1.5rem;
        position: relative;
        padding-bottom: 10px;
        display: flex;
        align-items: center;
    }

        .page-title i {
            margin-right: 10px;
            color: var(--primary-color);
        }

        .page-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 40px;
            height: 3px;
            background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
        }

    .content-container {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        padding: 25px;
        margin-top: 1.5rem;
    }

    .info-box {
        background-color: rgba(52, 152, 219, 0.1);
        border-left: 4px solid var(--primary-color);
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 25px;
    }

        .info-box h4 {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--primary-color);
            margin-bottom: 10px;
            display: flex;
            align-items: center;
        }

            .info-box h4 i {
                margin-right: 8px;
            }

        .info-box p {
            color: #555;
            font-size: 0.95rem;
            margin-bottom: 10px;
        }

            .info-box p:last-child {
                margin-bottom: 0;
            }

    .download-btn {
        background: linear-gradient(135deg, var(--primary-color), #2980b9);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 14px 25px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        text-align: center;
        box-shadow: 0 4px 10px rgba(52, 152, 219, 0.2);
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

        .download-btn:hover {
            background: linear-gradient(135deg, #2980b9, var(--primary-color));
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(52, 152, 219, 0.3);
        }

        .download-btn i {
            margin-right: 8px;
        }

    .data-preview {
        background-color: var(--light-grey);
        border-radius: 8px;
        padding: 15px;
        margin-top: 25px;
    }

        .data-preview h5 {
            font-size: 1rem;
            font-weight: 600;
            color: var(--dark-color);
            margin-bottom: 15px;
            display: flex;
            align-items: center;
        }

            .data-preview h5 i {
                margin-right: 8px;
                color: var(--primary-color);
            }

    .data-categories {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-bottom: 15px;
    }

    .data-category {
        background-color: white;
        border-radius: 20px;
        padding: 5px 12px;
        font-size: 0.85rem;
        color: var(--dark-color);
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        display: inline-flex;
        align-items: center;
    }

        .data-category i {
            margin-right: 5px;
            color: var(--primary-color);
            font-size: 0.75rem;
        }

    .privacy-note {
        margin-top: 25px;
        padding-top: 20px;
        border-top: 1px solid var(--border-color);
        font-size: 0.9rem;
        color: #777;
    }

        .privacy-note i {
            color: var(--primary-color);
            margin-right: 5px;
        }
</style>

<h3 class="page-title">
    <i class="fas fa-download"></i> @ViewData["Title"]
</h3>

<div class="content-container">
    <div class="info-box">
        <h4><i class="fas fa-info-circle"></i> About Your Data</h4>
        <p>
            You can download a copy of your personal data that we store. This file will contain all
            information associated with your account in a machine-readable JSON format.
        </p>
        <p>
            The download process may take a moment to prepare your data file. After downloading,
            please keep this file secure as it contains personal information.
        </p>
    </div>

    <form method="post">
        <button type="submit" class="download-btn">
            <i class="fas fa-cloud-download-alt"></i> Download My Data
        </button>
    </form>

    <div class="data-preview">
        <h5><i class="fas fa-list"></i> Data Included in Your Download</h5>
        <div class="data-categories">
            <span class="data-category"><i class="fas fa-user"></i> Profile Information</span>
            <span class="data-category"><i class="fas fa-envelope"></i> Email Addresses</span>
            <span class="data-category"><i class="fas fa-phone"></i> Phone Numbers</span>
            <span class="data-category"><i class="fas fa-key"></i> Login Information</span>
            <span class="data-category"><i class="fas fa-shield-alt"></i> Security Settings</span>
            <span class="data-category"><i class="fas fa-history"></i> Account Activity</span>
        </div>
        <p>
            The file will be in JSON format and can be viewed with any text editor or specialized
            JSON viewer applications.
        </p>
    </div>

    <div class="privacy-note">
        <i class="fas fa-lock"></i> We care about your privacy. After downloading your data, please store it securely
        as it contains personal information. For more information about how we handle your data, please
        review our Privacy Policy.
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}