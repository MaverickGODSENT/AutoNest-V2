@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<style>
    :root {
        --primary-color: #3498db;
        --secondary-color: #2c3e50;
        --accent-color: #e74c3c;
        --success-color: #2ecc71;
        --light-color: #ecf0f1;
        --border-color: #e0e0e0;
        --light-grey: #f8f9fa;
        --dark-color: #2c3e50;
        --warning-color: #f39c12;
    }

    .page-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--dark-color);
        margin-bottom: 1.5rem;
        position: relative;
        padding-bottom: 10px;
        display: flex;
        align-items: center;
    }

        .page-title i {
            margin-right: 10px;
            color: var(--accent-color);
        }

        .page-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 40px;
            height: 3px;
            background: linear-gradient(90deg, var(--accent-color), var(--warning-color));
        }

    .delete-container {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        padding: 25px;
        margin-top: 1.5rem;
    }

    .warning-box {
        background-color: #FEF5E7;
        border-left: 4px solid var(--warning-color);
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 25px;
        position: relative;
    }

    .warning-icon {
        position: absolute;
        top: 20px;
        left: 20px;
        font-size: 2rem;
        color: var(--warning-color);
        opacity: 0.2;
    }

    .warning-content {
        font-weight: 500;
        color: #7E5109;
        margin-left: 20px;
    }

        .warning-content p {
            margin-bottom: 0;
        }

        .warning-content strong {
            font-weight: 700;
            display: block;
            margin-bottom: 5px;
            color: #B7950B;
        }

    .form-group {
        margin-bottom: 1.5rem;
        position: relative;
    }

    .form-label {
        font-weight: 600;
        color: var(--dark-color);
        margin-bottom: 8px;
        display: block;
        font-size: 0.95rem;
    }

    .form-control {
        border: 1px solid var(--border-color);
        border-radius: 8px;
        padding: 12px 15px 12px 40px;
        font-size: 15px;
        color: #333;
        background-color: #fff;
        transition: all 0.3s ease;
        width: 100%;
        height: auto;
    }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
            outline: none;
        }

    .input-icon {
        position: absolute;
        left: 15px;
        top: 42px;
        color: #aaa;
        transition: all 0.3s ease;
    }

    .validation-message {
        font-size: 0.85rem;
        color: var(--accent-color);
        margin-top: 5px;
        display: block;
    }

    .delete-btn {
        background: linear-gradient(135deg, var(--accent-color), #c0392b);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 14px 25px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        width: 100%;
        text-align: center;
        box-shadow: 0 4px 10px rgba(231, 76, 60, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .delete-btn:hover {
            background: linear-gradient(135deg, #c0392b, var(--accent-color));
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(231, 76, 60, 0.3);
        }

        .delete-btn i {
            margin-right: 8px;
        }

    .cancel-link {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 15px;
        color: var(--dark-color);
        font-weight: 500;
        text-decoration: none;
    }

        .cancel-link:hover {
            color: var(--primary-color);
        }

        .cancel-link i {
            margin-right: 8px;
        }

    .confirmation-box {
        margin-top: 20px;
        padding: 15px;
        border-radius: 8px;
        background-color: #f8f9fa;
        border: 1px solid #e0e0e0;
    }

        .confirmation-box label {
            display: flex;
            align-items: center;
            font-weight: 500;
            color: var(--dark-color);
            cursor: pointer;
        }

        .confirmation-box input[type="checkbox"] {
            margin-right: 10px;
        }
</style>

<h3 class="page-title">
    <i class="fas fa-user-slash"></i> @ViewData["Title"]
</h3>

<div class="delete-container">
    <div class="warning-box">
        <i class="fas fa-exclamation-triangle warning-icon"></i>
        <div class="warning-content">
            <strong>Warning: This action cannot be undone</strong>
            <p>Deleting your personal data will permanently remove your account and all associated information. This action cannot be recovered.</p>
        </div>
    </div>

    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <label asp-for="Input.Password" class="form-label">Password</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Enter your password to confirm deletion" />
                <i class="fas fa-lock input-icon"></i>
                <span asp-validation-for="Input.Password" class="validation-message"></span>
            </div>
        }

        <div class="confirmation-box">
            <label for="confirmDelete">
                <input type="checkbox" id="confirmDelete" required />
                I understand that this action will permanently delete my account and cannot be undone
            </label>
        </div>

        <button class="delete-btn" type="submit" id="deleteButton" disabled>
            <i class="fas fa-trash-alt"></i> Delete data and close my account
        </button>

        <a href="./PersonalData" class="cancel-link">
            <i class="fas fa-arrow-left"></i> Cancel and go back
        </a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const confirmCheckbox = document.getElementById('confirmDelete');
            const deleteButton = document.getElementById('deleteButton');

            confirmCheckbox.addEventListener('change', function() {
                deleteButton.disabled = !this.checked;
            });

            // Add confirmation dialog
            document.getElementById('delete-user').addEventListener('submit', function(e) {
                if (!confirm('Are you absolutely sure you want to delete your account? This action CANNOT be undone.')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}