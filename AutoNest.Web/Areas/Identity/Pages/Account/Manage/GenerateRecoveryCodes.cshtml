@page
@model GenerateRecoveryCodesModel
@{
    ViewData["Title"] = "Generate two-factor authentication (2FA) recovery codes";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<style>
    :root {
        --primary-color: #3498db;
        --secondary-color: #2c3e50;
        --accent-color: #e74c3c;
        --success-color: #2ecc71;
        --light-color: #ecf0f1;
        --border-color: #e0e0e0;
        --light-grey: #f8f9fa;
        --dark-color: #2c3e50;
        --warning-color: #f39c12;
    }

    .page-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--dark-color);
        margin-bottom: 1.5rem;
        position: relative;
        padding-bottom: 10px;
        display: flex;
        align-items: center;
    }

        .page-title i {
            margin-right: 10px;
            color: var(--warning-color);
        }

        .page-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 40px;
            height: 3px;
            background: linear-gradient(90deg, var(--warning-color), var(--accent-color));
        }

    .content-container {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        padding: 25px;
        margin-top: 1.5rem;
    }

    .warning-box {
        background-color: #FEF5E7;
        border-left: 4px solid var(--warning-color);
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 25px;
        position: relative;
    }

    .warning-icon {
        position: absolute;
        top: 20px;
        left: 20px;
        font-size: 2rem;
        color: var(--warning-color);
        opacity: 0.2;
    }

    .warning-content {
        font-weight: 500;
        color: #7E5109;
    }

        .warning-content p {
            margin-bottom: 15px;
        }

            .warning-content p:last-child {
                margin-bottom: 0;
            }

        .warning-content strong {
            font-weight: 700;
            color: #B7950B;
        }

        .warning-content a {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 600;
            transition: all 0.2s ease;
        }

            .warning-content a:hover {
                color: #2980b9;
                text-decoration: underline;
            }

    .action-buttons {
        display: flex;
        align-items: center;
        margin-top: 25px;
    }

    .generate-btn {
        background: linear-gradient(135deg, var(--warning-color), #e67e22);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 14px 25px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        text-align: center;
        box-shadow: 0 4px 10px rgba(243, 156, 18, 0.2);
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

        .generate-btn:hover {
            background: linear-gradient(135deg, #e67e22, var(--warning-color));
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(243, 156, 18, 0.3);
        }

        .generate-btn i {
            margin-right: 8px;
        }

    .cancel-link {
        display: inline-flex;
        align-items: center;
        margin-left: 15px;
        color: var(--dark-color);
        font-weight: 500;
        text-decoration: none;
    }

        .cancel-link:hover {
            color: var(--primary-color);
        }

        .cancel-link i {
            margin-right: 8px;
        }

    .info-box {
        background-color: rgba(52, 152, 219, 0.1);
        border-left: 4px solid var(--primary-color);
        border-radius: 8px;
        padding: 20px;
        margin-top: 25px;
    }

    .info-box-title {
        font-size: 1rem;
        font-weight: 600;
        color: var(--primary-color);
        margin-bottom: 10px;
        display: flex;
        align-items: center;
    }

        .info-box-title i {
            margin-right: 8px;
        }

    .info-list {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

        .info-list li {
            padding: 8px 0 8px 25px;
            position: relative;
            color: #555;
        }

            .info-list li::before {
                content: '\f054';
                font-family: 'Font Awesome 5 Free';
                font-weight: 900;
                position: absolute;
                left: 0;
                top: 9px;
                font-size: 0.7rem;
                color: var(--primary-color);
            }

    .security-icon {
        text-align: center;
        margin-bottom: 20px;
    }

        .security-icon i {
            font-size: 3rem;
            color: var(--warning-color);
            opacity: 0.7;
        }
</style>

<partial name="_StatusMessage" for="StatusMessage" />

<h3 class="page-title">
    <i class="fas fa-key"></i> @ViewData["Title"]
</h3>

<div class="content-container">
    <div class="security-icon">
        <i class="fas fa-shield-alt"></i>
    </div>

    <div class="warning-box">
        <i class="fas fa-exclamation-triangle warning-icon"></i>
        <div class="warning-content">
            <p>
                <strong>Put these codes in a safe place.</strong>
            </p>
            <p>
                If you lose your device and don't have the recovery codes, you will lose access to your account.
                Recovery codes are the only way to sign in if you can't use your authenticator app.
            </p>
            <p>
                Generating new recovery codes does not change the keys used in authenticator apps. If you wish to change the key
                used in an authenticator app you should <a asp-page="./ResetAuthenticator">reset your authenticator keys.</a>
            </p>
        </div>
    </div>

    <div class="info-box">
        <h4 class="info-box-title">
            <i class="fas fa-info-circle"></i> About Recovery Codes
        </h4>
        <ul class="info-list">
            <li>You will receive 10 one-time use recovery codes</li>
            <li>Store these codes in a secure password manager or print them</li>
            <li>Each code can only be used once to sign in</li>
            <li>Once generated, previous recovery codes will no longer work</li>
            <li>Consider creating new codes if you suspect they've been compromised</li>
        </ul>
    </div>

    <div class="action-buttons">
        <form method="post">
            <button class="generate-btn" type="submit">
                <i class="fas fa-sync-alt"></i> Generate Recovery Codes
            </button>
        </form>
        <a asp-page="./TwoFactorAuthentication" class="cancel-link">
            <i class="fas fa-arrow-left"></i> Back to 2FA settings
        </a>
    </div>
</div>