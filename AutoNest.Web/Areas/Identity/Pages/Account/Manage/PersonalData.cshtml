@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<style>
    :root {
        --primary-color: #3498db;
        --secondary-color: #2c3e50;
        --accent-color: #e74c3c;
        --success-color: #2ecc71;
        --light-color: #ecf0f1;
        --border-color: #e0e0e0;
        --light-grey: #f8f9fa;
        --dark-color: #2c3e50;
        --warning-color: #f39c12;
    }

    .page-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--dark-color);
        margin-bottom: 1.5rem;
        position: relative;
        padding-bottom: 10px;
        display: flex;
        align-items: center;
    }

        .page-title i {
            margin-right: 10px;
            color: var(--primary-color);
        }

        .page-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 40px;
            height: 3px;
            background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
        }

    .content-container {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        padding: 25px;
        margin-top: 1.5rem;
    }

    .section-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--dark-color);
        margin-bottom: 15px;
        display: flex;
        align-items: center;
    }

        .section-title i {
            margin-right: 8px;
            color: var(--primary-color);
        }

    .data-intro {
        color: #555;
        margin-bottom: 20px;
        line-height: 1.6;
    }

    .warning-text {
        background-color: rgba(231, 76, 60, 0.1);
        border-left: 4px solid var(--accent-color);
        padding: 12px 15px;
        border-radius: 0 8px 8px 0;
        margin: 20px 0;
        color: #7B241C;
        font-weight: 500;
    }

    .data-options {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 30px;
    }

    .data-card {
        flex: 1;
        min-width: 250px;
        background-color: var(--light-grey);
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
    }

        .data-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }

    .data-card-header {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

    .data-card-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
    }

    .download-icon {
        color: var(--primary-color);
    }

    .delete-icon {
        color: var(--accent-color);
    }

    .data-card-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--dark-color);
    }

    .data-card-description {
        color: #666;
        margin-bottom: 20px;
        font-size: 0.95rem;
        line-height: 1.5;
    }

    .download-btn {
        background: linear-gradient(135deg, var(--primary-color), #2980b9);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 12px 18px;
        font-weight: 600;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        width: 100%;
        text-align: center;
        box-shadow: 0 4px 10px rgba(52, 152, 219, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .download-btn:hover {
            background: linear-gradient(135deg, #2980b9, var(--primary-color));
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(52, 152, 219, 0.3);
        }

        .download-btn i {
            margin-right: 8px;
        }

    .delete-btn {
        background: linear-gradient(135deg, var(--accent-color), #c0392b);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 12px 18px;
        font-weight: 600;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        width: 100%;
        text-align: center;
        box-shadow: 0 4px 10px rgba(231, 76, 60, 0.2);
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .delete-btn:hover {
            background: linear-gradient(135deg, #c0392b, var(--accent-color));
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(231, 76, 60, 0.3);
            color: white;
        }

        .delete-btn i {
            margin-right: 8px;
        }

    .data-types {
        background-color: white;
        border-radius: 8px;
        padding: 15px 20px;
        margin-top: 30px;
        border: 1px solid var(--border-color);
    }

    .data-types-title {
        font-size: 1rem;
        font-weight: 600;
        color: var(--dark-color);
        margin-bottom: 15px;
    }

    .data-type-list {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
    }

    .data-type-item {
        background-color: var(--light-grey);
        border-radius: 20px;
        padding: 6px 12px;
        font-size: 0.85rem;
        color: #555;
        display: inline-flex;
        align-items: center;
    }

        .data-type-item i {
            margin-right: 5px;
            font-size: 0.8rem;
            color: var(--primary-color);
        }

    .info-box {
        background-color: rgba(52, 152, 219, 0.1);
        border-left: 4px solid var(--primary-color);
        border-radius: 0 8px 8px 0;
        padding: 15px;
        margin-top: 25px;
    }

        .info-box i {
            color: var(--primary-color);
            margin-right: 5px;
        }

    @@media (max-width: 768px) {
        .data-options

    {
        flex-direction: column;
    }

    }
</style>

<h3 class="page-title">
    <i class="fas fa-database"></i> @ViewData["Title"]
</h3>

<div class="content-container">
    <p class="data-intro">
        Your account contains personal data that you have given us. This page allows you to download or delete that data.
        Please review the options below to manage your personal information.
    </p>

    <p class="warning-text">
        <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
    </p>

    <div class="data-options">
        <div class="data-card">
            <div class="data-card-header">
                <div class="data-card-icon">
                    <i class="fas fa-download download-icon"></i>
                </div>
                <h4 class="data-card-title">Download Your Data</h4>
            </div>
            <p class="data-card-description">
                Download a copy of all personal data we have stored for your account. The data will be provided in a machine-readable format.
            </p>
            <form id="download-data" asp-page="DownloadPersonalData" method="post">
                <button class="download-btn" type="submit">
                    <i class="fas fa-cloud-download-alt"></i> Download Data
                </button>
            </form>
        </div>

        <div class="data-card">
            <div class="data-card-header">
                <div class="data-card-icon">
                    <i class="fas fa-trash-alt delete-icon"></i>
                </div>
                <h4 class="data-card-title">Delete Your Data</h4>
            </div>
            <p class="data-card-description">
                Permanently delete all personal data associated with your account. This action cannot be undone.
            </p>
            <a id="delete" asp-page="DeletePersonalData" class="delete-btn">
                <i class="fas fa-trash-alt"></i> Delete Account
            </a>
        </div>
    </div>

    <div class="data-types">
        <h5 class="data-types-title">Data We Collect</h5>
        <div class="data-type-list">
            <span class="data-type-item"><i class="fas fa-user"></i> Profile Information</span>
            <span class="data-type-item"><i class="fas fa-envelope"></i> Email Address</span>
            <span class="data-type-item"><i class="fas fa-phone"></i> Phone Number</span>
            <span class="data-type-item"><i class="fas fa-lock"></i> Security Settings</span>
            <span class="data-type-item"><i class="fas fa-sign-in-alt"></i> Login History</span>
            <span class="data-type-item"><i class="fas fa-shield-alt"></i> Two-Factor Settings</span>
        </div>
    </div>

    <div class="info-box">
        <i class="fas fa-info-circle"></i>
        We value your privacy and make it easy for you to access and manage your personal data. For more information about how we handle your data, please review our Privacy Policy.
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}