@page
@model ConfirmEmailChangeModel
@{
    ViewData["Title"] = "Confirm email change";
}

<style>
    :root {
        --primary-color: #3498db;
        --secondary-color: #2c3e50;
        --accent-color: #e74c3c;
        --success-color: #2ecc71;
        --light-color: #ecf0f1;
        --border-color: #e0e0e0;
        --light-grey: #f8f9fa;
        --dark-color: #2c3e50;
    }

    .confirmation-container {
        max-width: 650px;
        margin: 4rem auto;
        text-align: center;
    }

    .confirmation-card {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        padding: 3rem 2rem;
        position: relative;
        overflow: hidden;
    }

        .confirmation-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, var(--primary-color), #2980b9);
        }

    .page-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--dark-color);
        margin-bottom: 1.5rem;
    }

    .confirmation-icon {
        font-size: 4rem;
        color: var(--success-color);
        margin-bottom: 1.5rem;
        opacity: 0.9;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 2rem;
    }

    .primary-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, var(--primary-color), #2980b9);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 12px 25px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        text-decoration: none;
        box-shadow: 0 4px 10px rgba(52, 152, 219, 0.2);
    }

        .primary-btn:hover {
            background: linear-gradient(135deg, #2980b9, var(--primary-color));
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(52, 152, 219, 0.3);
            color: white;
        }

        .primary-btn i {
            margin-right: 8px;
        }

    .secondary-link {
        display: inline-flex;
        align-items: center;
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 500;
        margin-top: 15px;
    }

        .secondary-link:hover {
            text-decoration: underline;
        }

        .secondary-link i {
            margin-right: 5px;
        }

    .info-box {
        background-color: var(--light-grey);
        border-radius: 8px;
        padding: 20px;
        margin-top: 1.5rem;
        max-width: 450px;
        margin-left: auto;
        margin-right: auto;
        text-align: left;
    }

    .info-box-title {
        font-weight: 600;
        color: var(--dark-color);
        margin-bottom: 10px;
        display: flex;
        align-items: center;
    }

        .info-box-title i {
            margin-right: 8px;
            color: var(--primary-color);
        }

    .info-box p {
        color: #666;
        margin-bottom: 10px;
        font-size: 0.95rem;
    }

        .info-box p:last-child {
            margin-bottom: 0;
        }
</style>

<div class="confirmation-container">
    <div class="confirmation-card">
        <h1 class="page-title">@ViewData["Title"]</h1>

        <!-- This will show the success or error message -->
        <partial name="_StatusMessage" model="Model.StatusMessage" />

        <!-- We'll conditionally show these elements based on the status message -->
        @if (Model.StatusMessage != null && Model.StatusMessage.Contains("success"))
        {
            <div class="confirmation-icon">
                <i class="fas fa-envelope-open-text"></i>
            </div>

            <div class="info-box">
                <div class="info-box-title">
                    <i class="fas fa-info-circle"></i> What happened?
                </div>
                <p>
                    Your email address has been changed successfully. You will now use your new email address when signing in to your account.
                </p>
                <p>
                    If you didn't make this change, please contact customer support immediately.
                </p>
            </div>

            <div class="action-buttons">
                <a href="/Identity/Account/Manage" class="primary-btn">
                    <i class="fas fa-user-cog"></i> Go to Account Settings
                </a>
            </div>
        }
        else
        {
            <div class="info-box">
                <div class="info-box-title">
                    <i class="fas fa-exclamation-circle"></i> There was a problem
                </div>
                <p>
                    We couldn't complete your email change request. This might happen for several reasons:
                </p>
                <ul>
                    <li>The confirmation link has expired</li>
                    <li>The link has already been used</li>
                    <li>There might be a technical issue</li>
                </ul>
            </div>

            <div class="action-buttons">
                <a href="/Identity/Account/Manage/Email" class="primary-btn">
                    <i class="fas fa-redo"></i> Try Again
                </a>
            </div>
        }

        <a href="/" class="secondary-link">
            <i class="fas fa-home"></i> Return to Home
        </a>
    </div>
</div>