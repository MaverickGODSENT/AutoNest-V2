@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<style>
    :root {
        --primary-color: #3498db;
        --secondary-color: #2c3e50;
        --accent-color: #e74c3c;
        --success-color: #2ecc71;
        --light-color: #ecf0f1;
        --border-color: #e0e0e0;
        --light-grey: #f8f9fa;
        --dark-color: #2c3e50;
    }

    .password-recovery-container {
        max-width: 800px;
        margin: 3rem auto;
    }

    .password-recovery-card {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        padding: 2rem;
        position: relative;
        overflow: hidden;
    }

    .password-recovery-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 5px;
        background: linear-gradient(90deg, var(--primary-color), #2980b9);
    }

    .page-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--dark-color);
        margin-bottom: 0.5rem;
    }

    .subtitle {
        font-size: 1.1rem;
        color: #666;
        margin-bottom: 1.5rem;
    }

    .form-container {
        margin-top: 2rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
        position: relative;
    }

    .form-label {
        font-weight: 600;
        color: var(--dark-color);
        margin-bottom: 8px;
        display: block;
        font-size: 0.95rem;
    }

    .form-control {
        border: 1px solid var(--border-color);
        border-radius: 8px;
        padding: 12px 15px 12px 40px;
        font-size: 15px;
        color: #333;
        background-color: #fff;
        transition: all 0.3s ease;
        width: 100%;
        height: auto;
    }

    .form-control:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
        outline: none;
    }

    .input-icon {
        position: absolute;
        left: 15px;
        top: 42px;
        color: #aaa;
        transition: all 0.3s ease;
    }

    .form-control:focus + .input-icon {
        color: var(--primary-color);
    }

    .validation-message {
        font-size: 0.85rem;
        color: var(--accent-color);
        margin-top: 5px;
        display: block;
    }

    .reset-btn {
        background: linear-gradient(135deg, var(--primary-color), #2980b9);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 14px 25px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        width: 100%;
        text-align: center;
        box-shadow: 0 4px 10px rgba(52, 152, 219, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .reset-btn:hover {
        background: linear-gradient(135deg, #2980b9, var(--primary-color));
        transform: translateY(-2px);
        box-shadow: 0 6px 15px rgba(52, 152, 219, 0.3);
    }

    .reset-btn i {
        margin-right: 8px;
    }

    .login-link {
        display: inline-flex;
        align-items: center;
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 500;
        margin-top: 15px;
    }

    .login-link:hover {
        text-decoration: underline;
    }

    .login-link i {
        margin-right: 5px;
    }

    .info-section {
        margin-top: 2rem;
        background-color: var(--light-grey);
        border-radius: 8px;
        padding: 20px;
    }

    .info-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--dark-color);
        margin-bottom: 15px;
        display: flex;
        align-items: center;
    }

    .info-title i {
        margin-right: 8px;
        color: var(--primary-color);
    }

    .steps-list {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    .step-item {
        display: flex;
        align-items: flex-start;
        margin-bottom: 15px;
    }

    .step-number {
        min-width: 25px;
        height: 25px;
        background-color: var(--primary-color);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 0.8rem;
        margin-right: 10px;
    }

    .step-content {
        color: #555;
    }
</style>

<div class="password-recovery-container">
    <div class="password-recovery-card">
        <h1 class="page-title">@ViewData["Title"]</h1>
        <p class="subtitle">Enter your email address and we'll send you a link to reset your password.</p>

        <div class="row">
            <div class="col-lg-6">
                <div class="form-container">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="validation-message" role="alert"></div>

                        <div class="form-group">
                            <label asp-for="Input.Email" class="form-label">Email Address</label>
                            <div class="position-relative">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <i class="fas fa-envelope input-icon"></i>
                            </div>
                            <span asp-validation-for="Input.Email" class="validation-message"></span>
                        </div>

                        <button type="submit" class="reset-btn">
                            <i class="fas fa-paper-plane"></i> Send Reset Link
                        </button>
                    </form>

                    <a href="/Identity/Account/Login" class="login-link">
                        <i class="fas fa-arrow-left"></i> Back to login
                    </a>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="info-section">
                    <div class="info-title">
                        <i class="fas fa-info-circle"></i> Password Recovery Process
                    </div>

                    <ul class="steps-list">
                        <li class="step-item">
                            <div class="step-number">1</div>
                            <div class="step-content">
                                Enter the email address associated with your account
                            </div>
                        </li>
                        <li class="step-item">
                            <div class="step-number">2</div>
                            <div class="step-content">
                                You'll receive an email with a password reset link
                            </div>
                        </li>
                        <li class="step-item">
                            <div class="step-number">3</div>
                            <div class="step-content">
                                Click the link in the email to set a new password
                            </div>
                        </li>
                        <li class="step-item">
                            <div class="step-number">4</div>
                            <div class="step-content">
                                Use your new password to log in to your account
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}