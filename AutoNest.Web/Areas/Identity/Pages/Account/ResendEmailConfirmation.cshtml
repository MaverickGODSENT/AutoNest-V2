@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<style>
    :root {
        --primary-color: #3498db;
        --secondary-color: #2c3e50;
        --accent-color: #e74c3c;
        --light-color: #ecf0f1;
        --dark-color: #2c3e50;
    }

    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .custom-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 15px;
    }

    .section-title {
        font-size: 1.8rem;
        font-weight: 700;
        color: var(--dark-color);
        margin-bottom: 1.5rem;
        position: relative;
        padding-bottom: 10px;
        text-align: center;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 50px;
            height: 3px;
            background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
        }

    .resend-card {
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
    }

        .resend-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
        }

    .card-header {
        background: linear-gradient(90deg, var(--secondary-color), var(--dark-color));
        color: white;
        padding: 1.25rem;
        border-bottom: none;
        font-weight: 600;
        font-size: 1.1rem;
        margin: -2rem -2rem 1.5rem -2rem;
    }

    .form-floating input.form-control {
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 12px 15px;
        font-size: 15px;
        color: #333;
        background-color: #fff;
        transition: all 0.3s ease;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        height: auto;
        padding-top: 1.625rem;
        padding-bottom: 0.625rem;
    }

        .form-floating input.form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
            outline: none;
        }

    .form-floating > label {
        padding: 1rem 0.75rem;
    }

    .submit-btn {
        background: linear-gradient(135deg, var(--primary-color), #2980b9);
        border: none;
        color: white;
        padding: 12px 25px;
        border-radius: 8px;
        font-weight: 600;
        letter-spacing: 0.5px;
        box-shadow: 0 4px 6px rgba(52, 152, 219, 0.2);
        transition: all 0.3s ease;
        font-size: 16px;
        width: 100%;
    }

        .submit-btn:hover {
            background: linear-gradient(135deg, #2980b9, var(--primary-color));
            transform: translateY(-2px);
            box-shadow: 0 6px 8px rgba(52, 152, 219, 0.3);
        }

    .instructions {
        color: var(--dark-color);
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .email-icon {
        font-size: 2.5rem;
        color: var(--primary-color);
        margin-bottom: 1rem;
        text-align: center;
        display: block;
    }

    /* Mobile responsive adjustments */
    @@media (max-width: 768px) {
        .resend-card

    {
        padding: 1.5rem;
    }

    .card-header {
        margin: -1.5rem -1.5rem 1.5rem -1.5rem;
    }

    }
</style>

<div class="custom-container">
    <h1 class="section-title">@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="resend-card">
                <div class="card-header">
                    <i class="fas fa-envelope-open-text me-2"></i> Email Confirmation
                </div>

                <i class="fas fa-envelope email-icon"></i>
                <p class="instructions">Enter your email address below to receive a new confirmation link.</p>

                <form method="post">
                    <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-4">
                        <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="submit-btn">
                        <i class="fas fa-paper-plane me-2"></i> Resend Confirmation
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}