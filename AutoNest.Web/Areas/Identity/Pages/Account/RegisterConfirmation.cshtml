@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<style>
    :root {
        --primary-color: #3498db;
        --secondary-color: #2c3e50;
        --accent-color: #e74c3c;
        --light-color: #ecf0f1;
        --dark-color: #2c3e50;
    }

    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .custom-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 15px;
    }

    .section-title {
        font-size: 1.8rem;
        font-weight: 700;
        color: var(--dark-color);
        margin-bottom: 1.5rem;
        position: relative;
        padding-bottom: 10px;
        text-align: center;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 50px;
            height: 3px;
            background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
        }

    .confirmation-card {
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
        text-align: center;
    }

        .confirmation-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
        }

    .success-icon {
        font-size: 4rem;
        color: #2ecc71;
        margin-bottom: 1.5rem;
    }

    .confirmation-message {
        font-size: 1.2rem;
        color: var(--dark-color);
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    .dev-note {
        background-color: rgba(52, 152, 219, 0.1);
        border-left: 4px solid var(--primary-color);
        padding: 1rem;
        border-radius: 0 8px 8px 0;
        margin: 1.5rem 0;
        text-align: left;
    }

        .dev-note i {
            color: var(--primary-color);
            margin-right: 8px;
        }

    .confirmation-link {
        display: inline-block;
        background: linear-gradient(135deg, var(--primary-color), #2980b9);
        color: white;
        padding: 12px 25px;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        margin-top: 1rem;
        box-shadow: 0 4px 6px rgba(52, 152, 219, 0.2);
        transition: all 0.3s ease;
    }

        .confirmation-link:hover {
            background: linear-gradient(135deg, #2980b9, var(--primary-color));
            transform: translateY(-2px);
            box-shadow: 0 6px 8px rgba(52, 152, 219, 0.3);
            color: white;
        }

        .confirmation-link i {
            margin-right: 8px;
        }

    .home-link {
        margin-top: 2rem;
        display: inline-flex;
        align-items: center;
        color: var(--primary-color);
        text-decoration: none;
        transition: all 0.2s ease;
    }

        .home-link:hover {
            color: #2980b9;
            transform: translateX(5px);
        }

        .home-link i {
            margin-right: 8px;
        }

    /* Mobile responsive adjustments */
    @@media (max-width: 768px) {
        .confirmation-card

    {
        padding: 1.5rem;
    }

    }
</style>

<div class="custom-container">
    <h1 class="section-title">@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="confirmation-card">
                <i class="fas fa-check-circle success-icon"></i>

                @{
                    if (@Model.DisplayConfirmAccountLink)
                    {
                        <div class="dev-note">
                            <i class="fas fa-info-circle"></i>
                            <p>
                                This app does not currently have a real email sender registered, see <a href="https://aka.ms/aspaccountconf">these docs</a> for how to configure a real email sender.
                            </p>
                        </div>

                        <p class="confirmation-message">
                            Your account has been created successfully! Normally this would be emailed, but you can confirm your account now:
                        </p>

                        <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="confirmation-link">
                            <i class="fas fa-user-check"></i> Confirm Your Account
                        </a>
                    }
                    else
                    {
                        <p class="confirmation-message">
                            Your account has been created successfully! Please check your email to confirm your account.
                        </p>

                        <p class="confirmation-message">
                            <i class="fas fa-envelope"></i>
                            A verification link has been sent to your email address. Please click on the link to complete your registration.
                        </p>
                    }
                }

                <a href="/" class="home-link">
                    <i class="fas fa-home"></i> Return to Home Page
                </a>
            </div>
        </div>
    </div>
</div>