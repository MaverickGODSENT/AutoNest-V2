@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<style>
    :root {
        --primary-color: #3498db;
        --secondary-color: #2c3e50;
        --accent-color: #e74c3c;
        --success-color: #2ecc71;
        --light-color: #ecf0f1;
        --border-color: #e0e0e0;
        --light-grey: #f8f9fa;
        --dark-color: #2c3e50;
    }

    .registration-container {
        max-width: 800px;
        margin: 3rem auto;
    }

    .registration-card {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        padding: 2rem;
        position: relative;
        overflow: hidden;
    }

        .registration-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, var(--primary-color), #2980b9);
        }

    .page-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--dark-color);
        margin-bottom: 1rem;
    }

    .subtitle {
        font-size: 1.3rem;
        font-weight: 600;
        color: var(--dark-color);
        margin-bottom: 1.5rem;
    }

    .authentication-info {
        background-color: rgba(52, 152, 219, 0.1);
        border-left: 4px solid var(--primary-color);
        border-radius: 0 8px 8px 0;
        padding: 15px;
        margin: 20px 0;
        display: flex;
        align-items: flex-start;
    }

        .authentication-info i {
            font-size: 1.5rem;
            color: var(--primary-color);
            margin-right: 15px;
        }

    .authentication-info-content {
        color: #2574A9;
        font-weight: 500;
    }

        .authentication-info-content strong {
            font-weight: 700;
        }

    .provider-icon {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-right: 10px;
        color: white;
        vertical-align: middle;
    }

        .provider-icon.google {
            background-color: #DB4437;
        }

        .provider-icon.facebook {
            background-color: #3b5998;
        }

        .provider-icon.microsoft {
            background-color: #00a4ef;
        }

        .provider-icon.twitter {
            background-color: #1da1f2;
        }

        .provider-icon.github {
            background-color: #333;
        }

        .provider-icon.apple {
            background-color: #000;
        }

    .form-container {
        margin-top: 2rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
        position: relative;
    }

    .form-label {
        font-weight: 600;
        color: var(--dark-color);
        margin-bottom: 8px;
        display: block;
        font-size: 0.95rem;
    }

    .form-control {
        border: 1px solid var(--border-color);
        border-radius: 8px;
        padding: 12px 15px 12px 40px;
        font-size: 15px;
        color: #333;
        background-color: #fff;
        transition: all 0.3s ease;
        width: 100%;
        height: auto;
    }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
            outline: none;
        }

    .input-icon {
        position: absolute;
        left: 15px;
        top: 42px;
        color: #aaa;
        transition: all 0.3s ease;
    }

    .form-control:focus + .input-icon {
        color: var(--primary-color);
    }

    .validation-message {
        font-size: 0.85rem;
        color: var(--accent-color);
        margin-top: 5px;
        display: block;
    }

    .register-btn {
        background: linear-gradient(135deg, var(--primary-color), #2980b9);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 14px 25px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        width: 100%;
        text-align: center;
        box-shadow: 0 4px 10px rgba(52, 152, 219, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .register-btn:hover {
            background: linear-gradient(135deg, #2980b9, var(--primary-color));
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(52, 152, 219, 0.3);
        }

        .register-btn i {
            margin-right: 8px;
        }

    .privacy-notice {
        margin-top: 20px;
        font-size: 0.9rem;
        color: #777;
    }

        .privacy-notice a {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
        }

            .privacy-notice a:hover {
                text-decoration: underline;
            }

    .steps-container {
        margin-top: 2rem;
    }

    .step-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--dark-color);
        margin-bottom: 10px;
        display: flex;
        align-items: center;
    }

        .step-title i {
            margin-right: 8px;
            color: var(--primary-color);
        }

    .steps-list {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    .step-item {
        display: flex;
        align-items: flex-start;
        margin-bottom: 15px;
    }

    .step-number {
        min-width: 25px;
        height: 25px;
        background-color: var(--primary-color);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 0.8rem;
        margin-right: 10px;
    }

    .step-content {
        color: #555;
    }
</style>

<div class="registration-container">
    <div class="registration-card">
        <h1 class="page-title">@ViewData["Title"]</h1>
        <h2 class="subtitle" id="external-login-title">
            Associate your @Model.ProviderDisplayName account
        </h2>

        <div class="authentication-info">
            <i class="fas fa-check-circle"></i>
            <div class="authentication-info-content">
                <p id="external-login-description">
                    You've successfully authenticated with
                    <strong>
                        <span class="provider-icon @GetProviderClass(Model.ProviderDisplayName)">
                            @GetProviderIcon(Model.ProviderDisplayName)
                        </span>
                        @Model.ProviderDisplayName
                    </strong>.
                    Please enter an email address below and click the Register button to finish logging in.
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6">
                <div class="form-container">
                    <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="validation-message" role="alert"></div>

                        <div class="form-group">
                            <label asp-for="Input.Email" class="form-label">Email Address</label>
                            <div class="position-relative">
                                <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="Enter your email address" />
                                <i class="fas fa-envelope input-icon"></i>
                            </div>
                            <span asp-validation-for="Input.Email" class="validation-message"></span>
                        </div>

                        <button type="submit" class="register-btn">
                            <i class="fas fa-user-plus"></i> Complete Registration
                        </button>

                        <p class="privacy-notice">
                            By registering, you agree to our <a href="/privacy">Privacy Policy</a> and <a href="/terms">Terms of Service</a>.
                        </p>
                    </form>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="steps-container">
                    <div class="step-title">
                        <i class="fas fa-info-circle"></i> What happens next?
                    </div>

                    <ul class="steps-list">
                        <li class="step-item">
                            <div class="step-number">1</div>
                            <div class="step-content">
                                We'll associate your @Model.ProviderDisplayName account with your new account on our site
                            </div>
                        </li>
                        <li class="step-item">
                            <div class="step-number">2</div>
                            <div class="step-content">
                                You'll be able to sign in using your @Model.ProviderDisplayName account in the future
                            </div>
                        </li>
                        <li class="step-item">
                            <div class="step-number">3</div>
                            <div class="step-content">
                                We'll send a confirmation link to your email address
                            </div>
                        </li>
                        <li class="step-item">
                            <div class="step-number">4</div>
                            <div class="step-content">
                                Once confirmed, you'll have full access to your account
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetProviderClass(string providerName)
    {
        return providerName.ToLower() switch
        {
            "google" => "google",
            "facebook" => "facebook",
            "microsoft" => "microsoft",
            "twitter" => "twitter",
            "github" => "github",
            "apple" => "apple",
            _ => ""
        };
    }

    private Microsoft.AspNetCore.Html.IHtmlContent GetProviderIcon(string providerName)
    {
        var iconClass = providerName.ToLower() switch
        {
            "google" => "fab fa-google",
            "facebook" => "fab fa-facebook-f",
            "microsoft" => "fab fa-microsoft",
            "twitter" => "fab fa-twitter",
            "github" => "fab fa-github",
            "apple" => "fab fa-apple",
            _ => "fas fa-external-link-alt"
        };

        return new Microsoft.AspNetCore.Html.HtmlString($"<i class=\"{iconClass}\"></i>");
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}