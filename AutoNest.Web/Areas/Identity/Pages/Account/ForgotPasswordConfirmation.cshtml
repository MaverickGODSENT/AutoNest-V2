@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<style>
    :root {
        --primary-color: #3498db;
        --secondary-color: #2c3e50;
        --accent-color: #e74c3c;
        --success-color: #2ecc71;
        --light-color: #ecf0f1;
        --border-color: #e0e0e0;
        --light-grey: #f8f9fa;
        --dark-color: #2c3e50;
    }

    .confirmation-container {
        max-width: 650px;
        margin: 4rem auto;
        text-align: center;
    }

    .confirmation-card {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        padding: 3rem 2rem;
        position: relative;
        overflow: hidden;
    }

        .confirmation-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, var(--primary-color), var(--success-color));
        }

    .page-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--dark-color);
        margin-bottom: 1.5rem;
    }

    .confirmation-icon {
        font-size: 4rem;
        color: var(--primary-color);
        margin-bottom: 1.5rem;
        opacity: 0.9;
    }

    .confirmation-message {
        font-size: 1.1rem;
        color: #555;
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 2rem;
    }

    .login-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, var(--primary-color), #2980b9);
        color: white;
        border: none;
        border-radius: 8px;
        padding: 12px 25px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        text-decoration: none;
        box-shadow: 0 4px 10px rgba(52, 152, 219, 0.2);
    }

        .login-btn:hover {
            background: linear-gradient(135deg, #2980b9, var(--primary-color));
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(52, 152, 219, 0.3);
            color: white;
        }

        .login-btn i {
            margin-right: 8px;
        }

    .home-link {
        display: inline-flex;
        align-items: center;
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 500;
        margin-top: 15px;
    }

        .home-link:hover {
            text-decoration: underline;
        }

        .home-link i {
            margin-right: 5px;
        }

    .info-box {
        background-color: var(--light-grey);
        border-radius: 8px;
        padding: 20px;
        margin: 2rem auto 0;
        max-width: 450px;
        text-align: left;
    }

    .info-box-title {
        font-weight: 600;
        color: var(--dark-color);
        margin-bottom: 10px;
        display: flex;
        align-items: center;
    }

        .info-box-title i {
            margin-right: 8px;
            color: var(--primary-color);
        }

    .info-box ul {
        padding-left: 20px;
        margin-bottom: 0;
    }

    .info-box li {
        margin-bottom: 8px;
        color: #555;
    }

        .info-box li:last-child {
            margin-bottom: 0;
        }
</style>

<div class="confirmation-container">
    <div class="confirmation-card">
        <div class="confirmation-icon">
            <i class="fas fa-envelope"></i>
        </div>

        <h1 class="page-title">Check Your Email</h1>

        <p class="confirmation-message">
            We've sent a password reset link to your email address. Please check your inbox
            (and spam folder) and follow the instructions to reset your password.
        </p>

        <div class="info-box">
            <div class="info-box-title">
                <i class="fas fa-info-circle"></i> What to do next
            </div>
            <ul>
                <li>Check your email inbox for a message from us</li>
                <li>Click the password reset link in the email</li>
                <li>Create a new secure password</li>
                <li>Use your new password to sign in</li>
            </ul>
        </div>

        <div class="action-buttons">
            <a href="/Identity/Account/Login" class="login-btn">
                <i class="fas fa-sign-in-alt"></i> Return to Login
            </a>
        </div>

        <a href="/" class="home-link">
            <i class="fas fa-home"></i> Go to Home Page
        </a>
    </div>
</div>