@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<style>
    :root {
        --primary-color: #3498db;
        --secondary-color: #2c3e50;
        --accent-color: #e74c3c;
        --light-color: #ecf0f1;
        --dark-color: #2c3e50;
    }

    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .custom-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 15px;
    }

    .section-title {
        font-size: 1.8rem;
        font-weight: 700;
        color: var(--dark-color);
        margin-bottom: 1.5rem;
        position: relative;
        padding-bottom: 10px;
        text-align: center;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 50px;
            height: 3px;
            background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
        }

    .logout-card {
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
        text-align: center;
    }

        .logout-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
        }

    .logout-icon {
        font-size: 4rem;
        color: var(--primary-color);
        margin-bottom: 1.5rem;
    }

    .logout-message {
        font-size: 1.2rem;
        color: var(--dark-color);
        margin-bottom: 2rem;
    }

    .logout-btn {
        background: linear-gradient(135deg, var(--primary-color), #2980b9);
        border: none;
        color: white;
        padding: 12px 25px;
        border-radius: 8px;
        font-weight: 600;
        letter-spacing: 0.5px;
        box-shadow: 0 4px 6px rgba(52, 152, 219, 0.2);
        transition: all 0.3s ease;
        font-size: 16px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

        .logout-btn:hover {
            background: linear-gradient(135deg, #2980b9, var(--primary-color));
            transform: translateY(-2px);
            box-shadow: 0 6px 8px rgba(52, 152, 219, 0.3);
            text-decoration: none;
            color: white;
        }

        .logout-btn i {
            margin-right: 8px;
        }

    .success-message {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .success-icon {
        font-size: 4rem;
        color: #2ecc71;
        margin-bottom: 1.5rem;
    }

    .home-link {
        margin-top: 1.5rem;
        display: inline-flex;
        align-items: center;
        color: var(--primary-color);
        text-decoration: none;
        transition: all 0.2s ease;
    }

        .home-link:hover {
            color: #2980b9;
            transform: translateX(5px);
        }

        .home-link i {
            margin-right: 8px;
        }

    /* Mobile responsive adjustments */
    @@media (max-width: 768px) {
        .logout-card

    {
        padding: 1.5rem;
    }

    }
</style>

<div class="custom-container">
    <h1 class="section-title">@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="logout-card">
                @{
                    if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <div class="logout-prompt">
                            <i class="fas fa-sign-out-alt logout-icon"></i>
                            <p class="logout-message">Are you sure you want to log out of your account?</p>
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                <button type="submit" class="logout-btn">
                                    <i class="fas fa-sign-out-alt"></i> Yes, Log Me Out
                                </button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="success-message">
                            <i class="fas fa-check-circle success-icon"></i>
                            <p class="logout-message">You have successfully logged out of the application.</p>
                            <a href="/" class="home-link">
                                <i class="fas fa-home"></i> Return to Home Page
                            </a>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>