@using AutoNest.Models.Orders
@model OrderInputModel

<div class="container mt-4">
    <h3 class="fw-bold mb-4 text-center">Order Summary</h3>

    <div class="row">
        <!-- Order Details -->
        <div class="col-md-8">
            <div class="card shadow-sm p-3">
                <h5 class="fw-bold mb-3">Order Details</h5>
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Brand</th>
                            <th>Model</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CartItems)
                        {
                            <tr>
                                <td>
                                    <img src="@item.ImageUrl" alt="Product Image" class="img-fluid rounded" style="max-width: 80px;">
                                </td>
                                <td>@item.Brand</td>
                                <td>@item.Model</td>
                                <td>@item.Price</td>
                                <td>@item.Quantity</td>
                                <td>@(item.Price * item.Quantity).ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Shipping & Payment Details -->
        <div class="col-md-4">
            <div class="card shadow-sm p-3 mb-3">
                <h5 class="fw-bold">Shipping Details</h5>
                <p><strong>Address:</strong> @Model.ShippingAddress</p>
                <p><strong>City:</strong> @Model.ShippingCity</p>
                <p><strong>State:</strong> @Model.ShippingState</p>
                <p><strong>ZIP Code:</strong> @Model.ShippingZipCode</p>
            </div>

            <div class="card shadow-sm p-3">
                <h5 class="fw-bold">Order Summary</h5>
                <p class="fw-bold">Subtotal: <span class="float-end">@Model.SubTotal</span></p>
                <p class="fw-bold">Shipping: <span class="float-end">@Model.ShippingCost</span></p>
                <p class="fw-bold text-success">Total: <span class="float-end">@Model.TotalAmount</span></p>

                <form asp-controller="Payment" asp-action="Checkout" method="post">
                    <input type="hidden" name="amount" value="@Model.TotalAmount" />
                    <button type="submit" class="btn btn-success w-100 mt-3">Proceed to Payment</button>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Optional: Add any JavaScript for dynamic interactions here
    </script>
}
