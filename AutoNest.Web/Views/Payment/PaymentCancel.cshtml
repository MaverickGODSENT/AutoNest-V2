@{
    ViewData["Title"] = "Payment Canceled";
}

<div class="container text-center mt-5">
    <h2 class="text-danger"><i class="bi bi-x-circle"></i> Payment Canceled</h2>
    <p class="lead">Your payment was canceled. If this was a mistake, you can try again.</p>

    <div class="mt-4">
        <a asp-action="Checkout" asp-controller="Payment" class="btn btn-primary">
            <i class="bi bi-credit-card"></i> Try Again
        </a>
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">
            <i class="bi bi-house"></i> Return to Home
        </a>
    </div>
</div>
