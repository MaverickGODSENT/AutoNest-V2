@using AutoNest.Models.Categories
@model List<CategoryViewModel>
<style>
    .category-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .category-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .category-card .card-body {
        padding: 20px;
    }

    .category-card .card-title {
        font-size: 1.25rem;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .category-card .card-text {
        font-size: 0.9rem;
        color: #555;
    }
</style>

<div class="container my-5">
    <h1 class="text-center mb-4">Available Categories</h1>
    <div class="row">
        @foreach (var category in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card category-card">
                    <div class="card-body">
                        <h5 class="card-title">@category.Name</h5>
                        <p class="card-text">@category.Description</p>
                        <a asp-action="SearchPartsForCar" asp-controller="Part" asp-route-id="@category.SelectedCarId" class="btn btn-primary">View Parts</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Include Bootstrap JS and dependencies -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>