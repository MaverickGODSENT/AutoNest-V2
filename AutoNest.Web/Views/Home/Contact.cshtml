@using AutoNest.Models.Home
@model ContactFormModel
@{
    ViewData["Title"] = "Contact Us";
}

<div class="row">
    <div class="col-md-6">
        <h2 class="section-title">Contact Us</h2>
        <p>Have questions or need assistance? Fill out the form below, and we'll get back to you as soon as possible.</p>

        <form asp-controller="Home" asp-action="Contact" method="post">
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Enter your name" required>
                <span class="alert-danger" asp-validation-for="Name"></span>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" asp-for="Email" placeholder="Enter your email" required>
                <span class="alert-danger" asp-validation-for="Email"></span>
            </div>
            <div class="mb-3">
                <label for="subject" class="form-label">Subject</label>
                <input type="text" class="form-control" asp-for="Subject" placeholder="Enter the subject" required>
                <span class="alert-danger" asp-validation-for="Subject"></span>
            </div>
            <div class="mb-3">
                <label for="message" class="form-label">Message</label>
                <textarea class="form-control" asp-for="Message" rows="5" placeholder="Enter your message" required></textarea>
                <span class="alert-danger" asp-validation-for="Message"></span>
            </div>
            <button type="submit" class="btn btn-primary">Send Message</button>
        </form>
    </div>

    <div class="col-md-6">
        <h2 class="section-title">Our Location</h2>
        <!-- Google Maps iframe -->
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d635.322205714466!2d25.38476729406396!3d42.61716021462407!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40a8530058609c2d%3A0x653846ef7f33b8c9!2z0JTQtdGC0YHQutCwINC_0LDRgNGC0Lgg0LfQsNC70LAgItCU0LbQtdGA0Lgg0Lgg0KLQvtC8Ig!5e0!3m2!1sen!2sbg!4v1742389060807!5m2!1sen!2sbg"
                width="100%"
                height="400"
                style="border:0; border-radius: var(--border-radius);"
                allowfullscreen=""
                loading="lazy">
        </iframe>
    </div>
</div>