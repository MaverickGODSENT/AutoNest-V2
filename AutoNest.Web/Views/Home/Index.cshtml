@using AutoNest.Models.Home
@model HomeViewModel

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<style>
    :root {
        --primary-color: #3498db;
        --secondary-color: #2c3e50;
        --accent-color: #e74c3c;
        --light-color: #ecf0f1;
        --dark-color: #2c3e50;
    }

    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .custom-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 15px;
    }

    .search-form {
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
    }

        .search-form::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
        }

    .form-label {
        font-weight: 600;
        color: var(--dark-color);
        margin-bottom: 10px;
        display: block;
        font-size: 0.95rem;
    }

    .form-select {
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 12px 15px;
        font-size: 15px;
        color: #333;
        background-color: #fff;
        transition: all 0.3s ease;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        width: 100%;
    }

        .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
            outline: none;
        }

    .select-container {
        position: relative;
        margin-bottom: 25px;
    }

        .select-container i {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--primary-color);
            pointer-events: none;
        }

    .submit-btn {
        background: linear-gradient(135deg, var(--primary-color), #2980b9);
        border: none;
        color: white;
        padding: 12px 25px;
        border-radius: 8px;
        font-weight: 600;
        letter-spacing: 0.5px;
        box-shadow: 0 4px 6px rgba(52, 152, 219, 0.2);
        transition: all 0.3s ease;
        font-size: 16px;
    }

        .submit-btn:hover {
            background: linear-gradient(135deg, #2980b9, var(--primary-color));
            transform: translateY(-2px);
            box-shadow: 0 6px 8px rgba(52, 152, 219, 0.3);
        }

        .submit-btn i {
            margin-right: 8px;
        }

    .categories-card {
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: all 0.3s ease;
        height: 100%;
    }

        .categories-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
        }

    .card-header {
        background: linear-gradient(90deg, var(--secondary-color), var(--dark-color));
        color: white;
        padding: 1.25rem;
        border-bottom: none;
        font-weight: 600;
        font-size: 1.1rem;
    }

    .list-group-item {
        border-left: none;
        border-right: none;
        padding: 0.75rem 1.25rem;
        transition: all 0.2s ease;
    }

        .list-group-item:hover {
            background-color: rgba(52, 152, 219, 0.05);
        }

        .list-group-item a {
            color: var(--dark-color);
            text-decoration: none;
            display: block;
            transition: all 0.2s ease;
        }

            .list-group-item a:hover {
                color: var(--primary-color);
                transform: translateX(5px);
            }

        .list-group-item i {
            margin-right: 10px;
            color: var(--primary-color);
        }

    .section-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--dark-color);
        margin-bottom: 1.5rem;
        position: relative;
        padding-bottom: 10px;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 3px;
            background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
        }

    /* Brand Carousel Styles */
    .brand-carousel-container {
        padding: 30px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .brand-carousel {
        width: 100%;
        max-width: 400px;
        margin: 0 auto;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        position: relative;
    }

    .carousel-inner {
        border-radius: 10px;
    }

    .carousel-item {
        text-align: center;
        padding: 40px 30px;
        background-color: white;
        height: 250px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .brand-logo {
        max-width: 85%;
        max-height: 130px;
        object-fit: contain;
        margin-bottom: 20px;
        transition: transform 0.3s ease;
    }

    .carousel-item:hover .brand-logo {
        transform: scale(1.05);
    }

    .brand-name {
        font-size: 1.4rem;
        font-weight: 600;
        color: var(--dark-color);
    }

    .brand-tagline {
        font-size: 1rem;
        color: #666;
        margin-top: 5px;
    }

    /* Custom carousel controls */
    .carousel-control-prev, .carousel-control-next {
        background-color: rgba(52, 152, 219, 0.2);
        width: 40px;
        height: 40px;
        border-radius: 50%;
        top: 50%;
        transform: translateY(-50%);
        opacity: 0.8;
        transition: all 0.3s ease;
    }

    .carousel-control-prev {
        left: 10px;
    }

    .carousel-control-next {
        right: 10px;
    }

        .carousel-control-prev:hover, .carousel-control-next:hover {
            background-color: rgba(52, 152, 219, 0.4);
            opacity: 1;
        }

    .carousel-control-prev-icon, .carousel-control-next-icon {
        width: 20px;
        height: 20px;
    }

    .carousel-indicators {
        margin-bottom: 0;
        position: absolute;
        bottom: 10px;
    }

        .carousel-indicators [data-bs-target] {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background-color: var(--primary-color);
            opacity: 0.3;
            margin: 0 5px;
            transition: all 0.3s ease;
        }

        .carousel-indicators .active {
            opacity: 1;
            transform: scale(1.2);
        }

    .brand-info {
        text-align: center;
        margin-top: 40px;
    }

    .brand-description {
        color: #666;
        max-width: 600px;
        margin: 15px auto 25px;
        line-height: 1.6;
    }

    .view-all-brands {
        display: inline-flex;
        align-items: center;
        padding: 10px 20px;
        background: linear-gradient(135deg, var(--primary-color), #2980b9);
        color: white;
        text-decoration: none;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .view-all-brands:hover {
            background: linear-gradient(135deg, #2980b9, var(--primary-color));
            transform: translateY(-2px);
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
            color: white;
        }

        .view-all-brands i {
            margin-left: 8px;
        }

    /* Play/Pause control button */
    .carousel-play-pause {
        position: absolute;
        bottom: 10px;
        right: 10px;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background-color: rgba(255, 255, 255, 0.8);
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        z-index: 10;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

        .carousel-play-pause:hover {
            background-color: #fff;
            transform: scale(1.1);
        }

        .carousel-play-pause i {
            color: var(--primary-color);
            font-size: 0.8rem;
        }

    /* Mobile responsive adjustments */
    @@media (max-width: 768px) {
        .search-form

    {
        padding: 1.5rem;
    }

    .brand-carousel-container {
        padding: 20px 15px;
    }

    .carousel-item {
        padding: 30px 20px;
        height: 220px;
    }

    .brand-logo {
        max-height: 100px;
    }

    .brand-name {
        font-size: 1.2rem;
    }

    .brand-tagline {
        font-size: 0.9rem;
    }

    }
</style>

<main>
    <div class="custom-container">
        <h2 class="section-title">Find Your Perfect Vehicle</h2>

        <form method="post" asp-action="Search" asp-controller="Home" class="search-form">
            <div class="row">
                <div class="col-md-4">
                    <div class="select-container">
                        <label for="brandSelect" class="form-label">Brand</label>
                        <select id="brandSelect" class="form-select" asp-for="SelectedBrand">
                            <option value="-1" selected="selected">Select Brand</option>
                            @foreach (var car in Model.Cars)
                            {
                                <option value="@car.Brand">@car.Brand</option>
                            }
                        </select>
                        <i class="fas fa-car"></i>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="select-container">
                        <label for="modelSelect" class="form-label">Model</label>
                        <select id="modelSelect" class="form-select" asp-for="SelectedModel">
                            <option value="-1" selected="selected">Select Model</option>
                        </select>
                        <i class="fas fa-car-side"></i>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="select-container">
                        <label for="engineSelect" class="form-label">Modification</label>
                        <select id="engineSelect" class="form-select" asp-for="SelectedEngine">
                            <option value="-1" selected="selected">Select Modification</option>
                        </select>
                        <i class="fas fa-cogs"></i>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12 text-center">
                    <button type="submit" class="submit-btn">
                        <i class="fas fa-search"></i> Find Parts
                    </button>
                </div>
            </div>
        </form>

        <div class="row">
            <div class="col-md-4">
                <div class="categories-card">
                    <div class="card-header">
                        <i class="fas fa-tags me-2"></i>Available Categories
                    </div>
                    <ul class="list-group list-group-flush">
                        @foreach (var category in Model.Categories)
                        {
                            <li class="list-group-item">
                                <p>
                                    <i class="fas fa-angle-right"></i> @category.Name
                                </p>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-md-8">
                <div class="categories-card">
                    <div class="card-header">
                        <i class="fas fa-industry me-2"></i> Featured Brands
                    </div>
                    <div class="brand-carousel-container">
                        <!-- Brand Carousel -->
                        <div id="brandCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="4000">
                            <div class="carousel-indicators">
                                <button type="button" data-bs-target="#brandCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Bardahl"></button>
                                <button type="button" data-bs-target="#brandCarousel" data-bs-slide-to="1" aria-label="Pennzoil"></button>
                                <button type="button" data-bs-target="#brandCarousel" data-bs-slide-to="2" aria-label="Garrett"></button>
                                <button type="button" data-bs-target="#brandCarousel" data-bs-slide-to="3" aria-label="Bosch"></button>
                                <button type="button" data-bs-target="#brandCarousel" data-bs-slide-to="4" aria-label="NGK"></button>
                                <button type="button" data-bs-target="#brandCarousel" data-bs-slide-to="5" aria-label="Brembo"></button>
                            </div>
                            <div class="carousel-inner">
                                <!-- Bardahl -->
                                <div class="carousel-item active">
                                    <img src="~/images/parts/bardahl-logo.jpg" alt="Bardahl" class="brand-logo">
                                    <div class="brand-name">Bardahl</div>
                                    <div class="brand-tagline">Quality Automotive Lubricants</div>
                                </div>
                                <!-- Pennzoil -->
                                <div class="carousel-item">
                                    <img src="~/images/parts/pennzoil-logo.jpg" alt="Pennzoil" class="brand-logo">
                                    <div class="brand-name">Pennzoil</div>
                                    <div class="brand-tagline">Premium Motor Oils</div>
                                </div>
                                <!-- Garrett -->
                                <div class="carousel-item">
                                    <img src="~/images/parts//garett-logo.jpg" alt="Garrett" class="brand-logo">
                                    <div class="brand-name">Garrett</div>
                                    <div class="brand-tagline">Performance Turbochargers</div>
                                </div>
                                <!-- Bosch -->
                                <div class="carousel-item">
                                    <img src="~/images/parts/bosch-logo.jpg" alt="Bosch" class="brand-logo">
                                    <div class="brand-name">Bosch</div>
                                    <div class="brand-tagline">Innovative Automotive Solutions</div>
                                </div>
                                <!-- NGK -->
                                <div class="carousel-item">
                                    <img src="~/images/parts/ngk-logo.jpg" alt="NGK" class="brand-logo">
                                    <div class="brand-name">NGK</div>
                                    <div class="brand-tagline">Spark Plug Technology</div>
                                </div>
                                <!-- Brembo -->
                                <div class="carousel-item">
                                    <img src="~/images/parts/brembo-logo.jpg" alt="Brembo" class="brand-logo">
                                    <div class="brand-name">Brembo</div>
                                    <div class="brand-tagline">High-Performance Braking Systems</div>
                                </div>
                            </div>

                            <!-- Navigation Controls -->
                            <button class="carousel-control-prev" type="button" data-bs-target="#brandCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#brandCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>

                            <!-- Play/Pause Button -->
                            <div class="carousel-play-pause" id="carouselPlayPause">
                                <i class="fas fa-pause"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        var cars = @Html.Raw(Json.Serialize(Model.Cars));

        $('#brandSelect').change(function() {
            var selectedBrand = $(this).val();
            $('#modelSelect').empty().append('<option value="-1" selected="selected">Select Model</option>');
            $('#engineSelect').empty().append('<option value="-1" selected="selected">Select Modification</option>');

            if (selectedBrand != -1) {
                var filteredModels = cars.filter(function(car) {
                    return car.brand === selectedBrand;
                });

                var uniqueModels = [];
                filteredModels.forEach(function(car) {
                    if (!uniqueModels.includes(car.model)) {
                        uniqueModels.push(car.model);
                        $('#modelSelect').append('<option value="' + car.model + '">' + car.model + ' ' + car.modelYear + '</option>');
                    }
                });
            }
        });

        $('#modelSelect').change(function() {
            var selectedModel = $(this).val();
            var selectedBrand = $('#brandSelect').val();
            $('#engineSelect').empty().append('<option value="-1" selected="selected">Select Modification</option>');

            if (selectedModel != -1) {
                var selectedCars = cars.filter(function(car) {
                    return car.model === selectedModel && car.brand === selectedBrand;
                });

                if (selectedCars.length > 0 && selectedCars[0].compatibleEngineNames) {
                    selectedCars[0].compatibleEngineNames.forEach(function(engine) {
                        $('#engineSelect').append('<option value="' + engine + '">' + engine + '</option>');
                    });
                }
            }
        });

        // Play/Pause button functionality
        var carousel = document.getElementById('brandCarousel');
        var carouselInstance = new bootstrap.Carousel(carousel, {
            interval: 4000,
            wrap: true
        });

        $('#carouselPlayPause').click(function() {
            if ($(this).data('bs-slide') !== 'pause') {
                carouselInstance.pause();
                $(this).data('bs-slide', 'pause');
                $(this).html('<i class="fas fa-play"></i>');
            } else {
                carouselInstance.cycle();
                $(this).data('bs-slide', 'cycle');
                $(this).html('<i class="fas fa-pause"></i>');
            }
        });

        // Enable swipe on mobile devices
        var touchStartX = 0;
        var touchEndX = 0;

        $('.carousel-inner').on('touchstart', function(e) {
            touchStartX = e.originalEvent.touches[0].clientX;
        });

        $('.carousel-inner').on('touchend', function(e) {
            touchEndX = e.originalEvent.changedTouches[0].clientX;
            handleSwipe();
        });

        function handleSwipe() {
            if (touchEndX < touchStartX - 50) {
                // Swipe left, go to next slide
                $('#brandCarousel').carousel('next');
            }
            if (touchEndX > touchStartX + 50) {
                // Swipe right, go to previous slide
                $('#brandCarousel').carousel('prev');
            }
        }
    });
</script>