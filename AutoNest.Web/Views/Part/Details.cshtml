@using AutoNest.Models.Parts
@model PartViewModel

<div class="container mt-4">
    <div class="card">
        <div class="row g-0">
            <div class="col-md-4">
                <!-- Product Image (Placeholder for now) -->
                <img src="@Model.RemoteImageUrl" alt="https://via.placeholder.com/300x300" class="img-fluid rounded-start" alt="@Model.Brand @Model.Model">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <!-- Product Name and Description -->
                    <h2 class="card-title mb-3">@Model.Brand @Model.Model</h2>
                    <p class="card-text mb-3">@Model.Description</p>

                    <!-- Product Information -->
                    <ul class="list-group list-group-flush mb-4">
                        <li class="list-group-item"><strong>Price:</strong> @Model.Price.ToString("C")</li>
                        <li class="list-group-item"><strong>Quantity Available:</strong> @Model.Quantity</li>
                        <li class="list-group-item"><strong>Category:</strong> @Model.CategoryName</li>
                    </ul>

                    <!-- Add to Cart Section -->
                    <div class="d-flex align-items-center">
                        <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline">
                            <input type="hidden" name="partId" value="@Model.Id" />
                            <div class="d-flex">
                                <input type="number" name="quantity" value="1" min="1" class="form-control" style="width: 80px;">
                                <button type="submit" class="btn btn-success ms-3">Add to Cart</button>
                            </div>
                        </form>
                    </div>

                    <!-- Back to List Button -->
                    <div class="mt-3">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
