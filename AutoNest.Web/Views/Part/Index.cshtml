@using AutoNest.Models.Parts
@model IEnumerable<PartViewModel>

@{
    ViewData["Title"] = "All Parts";
}

<h1>All Parts</h1>

<div class="mb-3">
    <a asp-action="CreatePart" class="btn btn-success">Add New Part</a>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Brand</th>
            <th>Model</th>
            <th>Description</th>
            <th>Sales Count</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var part in Model)
            {
                <tr>
                    <td>@part.Brand</td>
                    <td>@part.Model</td>
                    <td>@part.Description</td>
                    <td>@part.SalesCount</td>
                    <td>@part.Quantity</td>
                    <td>@part.Price.ToString("C")</td>
                    <td>@part.CategoryName</td>
                    <td>
                        <a asp-action="EditPart" asp-route-id="@part.Id" class="btn btn-primary btn-sm">Edit</a>
                        <form asp-action="DeletePart" asp-route-id="@part.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this part?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center">No parts available.</td>
            </tr>
        }
    </tbody>
</table>
